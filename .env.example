# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Subscription Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_starter_id_here
STRIPE_PRICE_PRO=price_pro_id_here
STRIPE_PRICE_ELITE=price_elite_id_here

# Cron Job Security (REQUIRED - must be at least 32 characters)
# Generate with: openssl rand -base64 32
CRON_SECRET=your_random_secret_for_cron_jobs_here_min_32_chars

# YouTube Live Streaming (Primary solution for David Guetta event)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# AWS IVS (Interactive Video Service) - Future alternative
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_IVS_CHANNEL_ARN=your_channel_arn_here

# 100MS Live Configuration (alternative streaming solution)
NEXT_PUBLIC_100MS_APP_ID=your_100ms_app_id_here
NEXT_PUBLIC_100MS_APP_SECRET=your_100ms_app_secret_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_ENABLE_HAPPY_HOUR=true
NEXT_PUBLIC_ENABLE_AFFILIATE_SYSTEM=true
NEXT_PUBLIC_ENABLE_TIPS=true

# Happy Hour Configuration (Wednesday 20h, 4.99â‚¬)
HAPPY_HOUR_DAY=3
HAPPY_HOUR_START_TIME=20:00
HAPPY_HOUR_PRICE=4.99

# Payout Configuration (J+21 = 21 days after event ends)
PAYOUT_DELAY_DAYS=21

# Subscription Tiers Configuration
STARTER_ARTIST_SHARE=0.50
PRO_ARTIST_SHARE=0.60
ELITE_ARTIST_SHARE=0.70

# Tips Configuration (90% to artist, 10% platform fee)
TIP_ARTIST_SHARE=0.90
TIP_PLATFORM_FEE=0.10

# Affiliate Commission Rates (AA - Apporteurs d'Affaires)
AFFILIATE_LEVEL_1_RATE=0.025
AFFILIATE_LEVEL_2_RATE=0.015
AFFILIATE_LEVEL_3_RATE=0.01
AFFILIATE_INVESTMENT_COST=2997
AFFILIATE_MONTHLY_FEE=19.99

# Regional Representatives (RR) Configuration
RR_BASIC_INVESTMENT=4997
RR_BASIC_COMMISSION_RATE=0.05
RR_PREMIUM_INVESTMENT=9997
RR_PREMIUM_COMMISSION_RATE=0.30

# Upstash Redis (OPTIONAL - for production rate limiting)
# Free tier: 10K commands/day - https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Sentry (OPTIONAL - for error monitoring and performance tracking)
# Free tier: 5K errors/month - https://sentry.io
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# OpenAI Configuration (for AI features - OPTIONAL)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Email Configuration (OPTIONAL - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password_here

# WARNING: Never commit actual API keys to version control
