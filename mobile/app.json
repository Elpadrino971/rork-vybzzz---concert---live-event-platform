{
  "expo": {
    "name": "VyBzzZ",
    "slug": "vybzzz-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "vybzzz",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vybzzz.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "VyBzzZ a besoin d'accéder à votre caméra pour prendre des photos de profil.",
        "NSPhotoLibraryUsageDescription": "VyBzzZ a besoin d'accéder à vos photos pour définir votre photo de profil.",
        "NSMicrophoneUsageDescription": "VyBzzZ a besoin d'accéder à votre microphone pour les fonctionnalités de chat vocal."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.vybzzz.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B35",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.vybzzz.mobile",
          "enableGooglePay": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "153a892c-5231-4951-b1a9-29f8d6228ab2"
      }
    },
    "owner": "vybzzz"
  }
}
